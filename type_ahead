import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: MyHomePage(),
    );
  }
}

class MyHomePage extends StatefulWidget {
  @override
  _MyHomePageState createState() => _MyHomePageState();
}
class _MyHomePageState extends State<MyHomePage> {
  final TextEditingController _textEditingController = TextEditingController();
  List<String> usernames = ['RAMAN', 'Prachod', 'Anathi']; // Add more usernames as needed
  bool isMenuOpen = false;
  String selectedUsername = '';
  int mentionStartIndex = -1;

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('Mentionable Text Field'),
      ),
      body: Padding(
        padding: EdgeInsets.all(16.0),
        child: Column(
          children: [
            TextSelectionTheme(
              data: TextSelectionThemeData(
                selectionColor: Colors.red,
                selectionDecoration: TextDecoration(
                  underline: TextDecorationStyle.solid,
                  underlineColor: Colors.red,
                ),
              ),
              child: TextField(
                controller: _textEditingController,
                decoration: InputDecoration(
                  hintText: 'Type your message here...',
                ),
                onChanged: (text) {
                  final atIndex = text.lastIndexOf('@');
                  if (atIndex >= 0) {
                    setState(() {
                      isMenuOpen = true;
                      mentionStartIndex = atIndex;
                    });
                  } else {
                    setState(() {
                      isMenuOpen = false;
                      mentionStartIndex = -1;
                    });
                  }
                },
              ),
            ),
            if (isMenuOpen)
              Container(
                decoration: BoxDecoration(
                  border: Border.all(color: Colors.blue),
                  borderRadius: BorderRadius.circular(10.0),
                ),
                child: Column(
                  children: usernames.map((username) {
                    return ListTile(
                      title: Text(username),
                      onTap: () {
                        setState(() {
                          selectedUsername = username;
                          final currentText = _textEditingController.text;
                          final newText = currentText.substring(0, mentionStartIndex) + ' $selectedUsername ' + currentText.substring(mentionStartIndex + 1);
                          _textEditingController.text = newText;
                          isMenuOpen = false;
                          mentionStartIndex = -1;
                        });
                      },
                    );
                  }).toList(),
                ),
              ),
            ElevatedButton(
              onPressed: () {
                // Process the message with mentions
                print(_textEditingController.text);
              },
              child: Text('Send'),
            ),
          ],
        ),
      ),
    );
  }
}





